# Configuration for text editors and IDEs.
#
# Spec: https://editorconfig.org/
# ==============================================================================
root = true

[*]
end_of_line = lf
insert_final_newline = true

# ------------------------------------------------------------------------------
# Sources
# ------------------------------------------------------------------------------

[*.go]
indent_size = 4
indent_style = tab

[*.nix]
indent_size = 2
indent_style = space
max_line_length = 100

# ------------------------------------------------------------------------------
# Scripts
# ------------------------------------------------------------------------------

[*.{fish,zsh,bash}]
indent_size = 4
indent_style = space

[Makefile]
indent_style = tab

# ------------------------------------------------------------------------------
# Data Files
# ------------------------------------------------------------------------------

[*.json]
indent_size = 2
indent_style = tab

[*.yaml]
indent_size = 2
indent_style = space

[*.toml]
indent_size = 2
indent_style = tab
